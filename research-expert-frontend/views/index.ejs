<%- include('partials/header', {title: title}) %>

<section class="search-section">
    <h2>Find Research Experts</h2>
    <p class="description">
        Describe your research collaboration needs, including disciplines, required expertise, and the type of collaboration you're seeking.
    </p>
    
    <form action="/search" method="post" class="search-form">
        <div class="form-group">
            <textarea name="query" id="query" rows="5" required
                placeholder="<%= exampleQuery %>"></textarea>
        </div>
        
        <details class="advanced-options">
            <summary>Advanced Options</summary>
            <div class="options-content">
                <div class="form-group">
                    <label for="recent-years">
                        Consider publications from last 
                        <select name="recentYears" id="recent-years">
                            <option value="3">3</option>
                            <option value="5" selected>5</option>
                            <option value="10">10</option>
                        </select>
                        years
                    </label>
                </div>
                
                <div class="form-group">
                    <label for="min-works">
                        Minimum publication count:
                        <input type="number" name="minWorks" id="min-works" min="1" value="3">
                    </label>
                </div>
                
                <div class="form-group">
                    <label for="min-citations">
                        Minimum citation count:
                        <input type="number" name="minCitations" id="min-citations" min="0" value="100">
                    </label>
                </div>
                
                <div class="form-group">
                    <label>
                        <input type="checkbox" name="requireAllDisciplines">
                        Require expertise in all disciplines
                    </label>
                </div>
            </div>
        </details>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Find Experts</button>
        </div>
    </form>
</section>

<%- include('partials/footer') %>